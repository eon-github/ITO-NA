
<!--POPUP-SIGNUP-->
<form
    name="signup"
    action="/create-user"
    method="POST"
    class="popup-signup-content"
    onsubmit="return verifyPassword()"
    >
    <h1 onclick="closeSignup()" id="close-login" type="submit">x</h1>
    <img src="/images/LOGO-YL.png" alt="None" />

    <input
        id="email"
        name="email1"
        type="text"
        placeholder="Enter Email"
        required
    /> </input>

    <input
        name="sign2"
        type="text"
        placeholder="Enter Username"
        required
    /> </input>

    <input
        name="firstpass"
        type="password"
        placeholder="Enter Password"
        required
    /> </input>

    <input
        id="verify-password-signup"
        name="pass1"
        type="password"
        placeholder="Re-Enter Password"
        required
    /> </input>

    <button id="register" class="login-button bold" type="submit">Register</button>
</form>

